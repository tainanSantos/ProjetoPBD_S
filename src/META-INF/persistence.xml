<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <!-- Unidade de persistencia -->
    <persistence-unit name="Tainan" transaction-type="RESOURCE_LOCAL">
        <!-- Implementação do JPA -->
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!-- Lista de entidades -->

        <class>projeto_pbd.com.br.teste.UsuarioSoPraTeste</class>

        <properties>
            <!-- Propriedades JDBC -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/projeto_pbd" />
            <property name="hibernate.connection.user" value="postgres" />
            <property name="hibernate.connection.password" value="postgres" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
<!--            <property name="PersistenceExceptionhibernate.format_sql" value="false" />-->
            <property name="hibernate.use_sql_comments" value="false" />
<!--            <property name="hibernate.jdbc.wrap_result_sets" value="false" />-->
<!--            <property name="hibernate.hibernate.cache.use_query_cache" value="true" />-->
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>
